{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@environment/*": ["apps/ui/src/environments/*"],
      "@eosc-search-service/common": ["libs/common/src/index.ts"],
      "@eosc-search-service/layout": ["libs/layout/src/index.ts"],
      "@eosc-search-service/pages/marketplace": [
        "libs/pages/marketplace/src/index.ts"
      ],
      "@eosc-search-service/pages/openaire": [
        "libs/pages/openaire/src/index.ts"
      ],
      "@eosc-search-service/pages/training-catalog": [
        "libs/pages/training-catalog/src/index.ts"
      ],
      "@eosc-search-service/search": ["libs/search/src/index.ts"]
    }
  }
}
